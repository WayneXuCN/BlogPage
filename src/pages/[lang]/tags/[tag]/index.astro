---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Main from "@/layouts/Main.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import { slugifyStr } from "@/utils/slugify";
import { SITE } from "@/config";
import { t } from "@/i18n/utils";
import { SUPPORTED_LOCALES } from "@/i18n/config";
import type { LocaleCode } from "@/i18n/config";

interface PathProps {
  tagName: string;
  locale: LocaleCode;
}

export async function getStaticPaths() {
  const posts = await getCollection("blog", ({ data }) => !data.draft);

  return SUPPORTED_LOCALES.flatMap(locale => {
    const localePosts = posts.filter(post => post.data.lang === locale.code);
    const tagMap = new Map<string, string>();

    localePosts.forEach(post => {
      (post.data.tags || []).forEach((tag: string) => {
        const slug = slugifyStr(tag);
        tagMap.set(slug, tag);
      });
    });

    return Array.from(tagMap.entries()).map(([tag, tagName]) => ({
      params: { lang: locale.path, tag },
      props: { tagName, locale: locale.code } satisfies PathProps,
    }));
  });
}

const { tag } = Astro.params;
const { tagName, locale } = Astro.props as PathProps;

const posts = await getCollection(
  "blog",
  ({ data }) => data.lang === locale && !data.draft
);

const filteredPosts = getSortedPosts(posts).filter(post =>
  (post.data.tags || []).some((tg: string) => slugifyStr(tg) === tag)
);
---

<Layout title={`${tagName} | ${t("tagsTitle", locale)} | ${SITE.title}`}>
  <Header />
  <Main
    pageTitle={`${t("tagTitle", locale)} ${tagName}`}
    pageDesc={`${t("tagDescription", locale)} "${tagName}".`}
  >
    {
      filteredPosts.length === 0 ? (
        <p class="text-muted-foreground italic">{t("noTags", locale)}</p>
      ) : (
        <ul>
          {filteredPosts.map(data => (
            <Card variant="h3" {...data} />
          ))}
        </ul>
      )
    }
  </Main>
  <Footer />
</Layout>
