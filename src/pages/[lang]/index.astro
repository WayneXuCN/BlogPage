---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import {
  t,
  getStaticPaths as getI18nStaticPaths,
  getLocalePath,
} from "@/i18n/utils";
import { getLocaleConfig } from "@/i18n/config";
import type { LocaleCode } from "@/i18n/config";
import type { MarkdownInstance } from "astro";

type IndexEntry = MarkdownInstance<{
  title: string;
  description?: string;
  lang: string;
}>;

const indexPages = import.meta.glob("@/data/index/*.md", {
  eager: true,
}) as Record<string, IndexEntry>;

export async function getStaticPaths() {
  return getI18nStaticPaths();
}

const { lang } = Astro.params;
const locale = getLocaleConfig(lang).code as LocaleCode;

const matchedEntry = Object.values(indexPages).find(
  page => page.frontmatter.lang === locale
);
const matched = matchedEntry ?? Object.values(indexPages)[0];

if (!matched) {
  throw new Error("No index page content found");
}

const { Content, frontmatter } = matched;

const posts = SITE.pages.posts.enabled
  ? await getCollection("blog", ({ data }) => data.lang === locale)
  : [];

const sortedPosts = SITE.pages.posts.enabled ? getSortedPosts(posts) : [];
const featuredPosts = SITE.pages.posts.enabled
  ? sortedPosts.filter(({ data }) => data.featured)
  : [];
const recentPosts = SITE.pages.posts.enabled
  ? sortedPosts.filter(({ data }) => !data.featured)
  : [];
const backUrlValue = (getLocalePath(locale) || "/").replace(/\/$/, "") + "/";
const backUrlScript = `const backUrl = ${JSON.stringify(backUrlValue)};
document.addEventListener("astro:page-load", () => {
  const indexLayout = (document.querySelector("#main-content"))?.dataset?.layout;
  if (indexLayout) {
    sessionStorage.setItem("backUrl", backUrl);
  }
});`;
---

<Layout
  title={`${frontmatter.title} | ${SITE.title}`}
  description={frontmatter.description}
>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-8 pb-6">
      <h1 class="my-4 inline-block text-4xl font-bold sm:my-8 sm:text-5xl">
        {frontmatter.title}
      </h1>
      {
        SITE.pages.posts.enabled && (
          <a
            target="_blank"
            href={`${getLocalePath(locale)}/rss.xml`}
            class="inline-block"
            aria-label="rss feed"
            title="RSS Feed"
          >
            <IconRss
              width={20}
              height={20}
              class="scale-125 stroke-accent stroke-3 rtl:-rotate-90"
            />
            <span class="sr-only">RSS Feed</span>
          </a>
        )
      }

      <p>
        {frontmatter.description}
      </p>
      <div class="mt-2 text-foreground/90 [&_a]:underline [&_a]:decoration-dashed [&_a]:underline-offset-4 hover:[&_a]:text-accent">
        <Content />
      </div>
    </section>

    <Hr />

    {
      SITE.pages.posts.enabled && featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">
              {t("featured", locale)}
            </h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      SITE.pages.posts.enabled && recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">
            {t("recentPosts", locale)}
          </h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    {
      SITE.pages.posts.enabled && (
        <div class="my-8 text-center">
          <LinkButton href={`${getLocalePath(locale)}/posts`}>
            {t("allPosts", locale)}
            <IconArrowRight class="inline-block rtl:-rotate-180" />
          </LinkButton>
        </div>
      )
    }
  </main>
  <Footer />
</Layout>
<script set:html={backUrlScript} is:inline />
